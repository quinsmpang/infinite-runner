	/**	 * Logs messages to an output.  	 * 	 * @author Rob Harris	 */	public interface ILog	{		/**		 * Adds an informational message to the log.		 * 		 * @param msg  The message to be added to the log.		 * @param caller  The calling class (optional).		 */		function info(msg:String, caller:Object=null):void;				/**		 * Adds a warning message to the log.		 * 		 * @param msg  The message to be added to the log.		 * @param caller  The calling class (optional).		 */		function warning(msg:String, caller:Object=null):void;				/**		 * Adds an error message to the log.		 * 		 * @param msg  The message to be added to the log.		 * @param caller  The calling class (optional).		 */		function error(msg:String, caller:Object=null):void;	}}